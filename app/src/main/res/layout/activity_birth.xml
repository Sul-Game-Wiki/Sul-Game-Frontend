<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:paddingHorizontal="20dp"
  android:layout_height="match_parent"
  tools:context=".BirthActivity">

  <ImageButton
    android:id="@+id/btn_close_birth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@null"
    android:src="@drawable/ic_close"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_prompt1_birth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/galmuri11_bold"
    android:text="생년월일을 입력해주세요"
    android:textColor="@color/black"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.2" />

  <TextView
    android:id="@+id/tv_prompt2_birth"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="46dp"
    android:text="생년월일"
    android:textColor="@color/deep_gray"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_prompt1_birth" />

  <EditText
    android:id="@+id/et_date_birth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/roundedbox_line_20"
    android:paddingHorizontal="15dp"
    android:maxLength="10"
    android:drawableEnd="@drawable/ic_calendar"
    android:paddingVertical="12dp"
    android:focusable="false"
    android:clickable="true"
    android:textColor="@color/deep_gray"
    android:textSize="14sp"
    android:hint="생년월일 선택"
    app:layout_constraintTop_toBottomOf="@+id/tv_prompt2_birth"
    tools:text="구해조" />

  <Button
    android:id="@+id/btn_next_birth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="52dp"
    android:layout_marginHorizontal="28dp"
    android:background="@drawable/roundedbox_20"
    android:backgroundTint="@color/light_gray"
    android:text="다음"
    android:enabled="false"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>