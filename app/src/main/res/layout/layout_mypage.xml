<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white">

  <LinearLayout
    android:id="@+id/container_footer_mypage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="5dp"
      android:text="회월탈퇴 / 로그아웃"
      android:textColor="@color/deep_gray"
      android:textSize="14sp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="5dp"
      android:text="개인정보처리방침"
      android:textColor="@color/deep_gray"
      android:textSize="14sp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="5dp"
      android:text="이용약관"
      android:textColor="@color/deep_gray"
      android:textSize="14sp" />
  </LinearLayout>

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/civ_profile_mypage"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:src="@color/light_gray"
    android:layout_marginTop="52dp"
    android:layout_marginStart="25dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_username_mypage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/galmuri11bold"
    android:text="구해조님"
    android:textColor="@color/black"
    android:textSize="24sp"
    android:layout_marginStart="17dp"
    app:layout_constraintStart_toEndOf="@+id/civ_profile_mypage"
    app:layout_constraintTop_toTopOf="@id/civ_profile_mypage" />

  <TextView
    android:id="@+id/tv_university_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="세종대학교"
    android:textColor="@color/deep_gray"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/civ_profile_mypage"
    app:layout_constraintStart_toStartOf="@+id/tv_username_mypage"
    app:layout_constraintTop_toBottomOf="@id/tv_username_mypage" />

  <ImageView
    android:id="@+id/iv_emblem_mypage"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:src="@drawable/ic_explevel_g"
    android:layout_marginStart="15dp"
    app:layout_constraintBottom_toTopOf="@+id/tv_university_mypage"
    app:layout_constraintStart_toEndOf="@+id/tv_username_mypage"
    app:layout_constraintTop_toTopOf="@+id/tv_username_mypage" />

  <TextView
    android:id="@+id/tv_text1_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="현재 등급은"
    android:textColor="#424242"
    android:textSize="18sp"
    android:layout_marginTop="25dp"
    app:layout_constraintStart_toStartOf="@+id/civ_profile_mypage"
    app:layout_constraintTop_toBottomOf="@+id/civ_profile_mypage" />

  <ImageView
    android:id="@+id/iv_emblem2_mypage"
    android:layout_width="28dp"
    android:layout_height="28dp"
    android:src="@drawable/ic_explevel_g"
    app:layout_constraintBottom_toBottomOf="@+id/tv_expLevel_mypage"
    app:layout_constraintStart_toStartOf="@+id/tv_text1_mypage"
    app:layout_constraintTop_toBottomOf="@+id/tv_text1_mypage" />

  <TextView
    android:id="@+id/tv_expLevel_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/main_color"
    android:textSize="24sp"
    android:layout_marginStart="10dp"
    app:layout_constraintStart_toEndOf="@+id/iv_emblem2_mypage"
    app:layout_constraintTop_toBottomOf="@+id/tv_text1_mypage"
    tools:text="G (Game)" />

  <TextView
    android:id="@+id/tv_text2_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="입니다."
    android:textColor="#424242"
    android:layout_marginStart="10dp"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/tv_expLevel_mypage"
    app:layout_constraintStart_toEndOf="@+id/tv_expLevel_mypage"
    app:layout_constraintTop_toTopOf="@+id/tv_expLevel_mypage" />

  <TextView
    android:id="@+id/tv_text3_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:text="다음 등급까지 남은 포인트는"
    android:textColor="#424242"
    android:textSize="18sp"
    app:layout_constraintStart_toStartOf="@+id/tv_text1_mypage"
    app:layout_constraintTop_toBottomOf="@+id/tv_expLevel_mypage" />

  <TextView
    android:id="@+id/tv_exp_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/main_color"
    android:textSize="24sp"
    app:layout_constraintStart_toStartOf="@+id/tv_text3_mypage"
    app:layout_constraintTop_toBottomOf="@+id/tv_text3_mypage"
    tools:text="300 포인트" />

  <TextView
    android:id="@+id/tv_text4_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="입니다."
    android:layout_marginStart="10dp"
    android:textColor="#424242"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/tv_exp_mypage"
    app:layout_constraintStart_toEndOf="@+id/tv_exp_mypage"
    app:layout_constraintTop_toTopOf="@+id/tv_exp_mypage" />

  <ProgressBar
    android:id="@+id/progressbar_exp_mypage"
    style="@style/HorizontalProgressBarStyle"
    android:layout_width="0dp"
    android:layout_height="12dp"
    android:layout_marginEnd="14dp"
    android:max="700"
    tools:progress="300"
    android:progressDrawable="@drawable/progress_bar_green"
    app:layout_constraintBottom_toBottomOf="@+id/iv_next_emblem_mypage"
    app:layout_constraintEnd_toStartOf="@+id/iv_next_emblem_mypage"
    app:layout_constraintStart_toStartOf="@+id/tv_text1_mypage"
    app:layout_constraintTop_toBottomOf="@+id/tv_exp_mypage" />

  <ImageView
    android:id="@+id/iv_next_emblem_mypage"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginEnd="25dp"
    android:src="@drawable/ic_explevel_s"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_exp_mypage" />

  <TextView
    android:id="@+id/tv_min_exp_mypage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="G (Game)"
    android:textSize="15sp"
    android:textColor="@color/deep_gray"
    android:layout_marginTop="3dp"
    app:layout_constraintStart_toStartOf="@+id/progressbar_exp_mypage"
    app:layout_constraintTop_toBottomOf="@+id/progressbar_exp_mypage" />

  <TextView
    android:id="@+id/tv_max_exp_mypage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="S (Sul)"
    android:textColor="@color/deep_gray"
    android:textSize="15sp"
    app:layout_constraintEnd_toEndOf="@+id/progressbar_exp_mypage"
    app:layout_constraintTop_toBottomOf="@+id/progressbar_exp_mypage" />

  <LinearLayout
    android:id="@+id/container_rank_mypage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginHorizontal="25dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_min_exp_mypage">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 순위"
        android:textColor="#424242"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/tv_exp_rank_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1위"
        android:textColor="#424242"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#EFEFEF"
      android:layout_marginVertical="5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 백분위"
        android:textColor="#424242"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/tv_exp_rank_percentile_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1%"
        android:textColor="#424242"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="#EFEFEF"
      android:layout_marginVertical="5dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 경험치"
        android:textColor="#424242"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <TextView
        android:id="@+id/tv_total_exp_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:textColor="#424242"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </LinearLayout>

  <LinearLayout
    android:id="@+id/container_buttons_mypage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginHorizontal="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/container_rank_mypage">

    <LinearLayout
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tv_mypost_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 게시글"
        android:textColor="@color/deep_gray"
        android:textSize="14sp" />

      <Button
        android:id="@+id/btn_mypost_mypage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_mypost" />
    </LinearLayout>

    <View
      android:layout_width="1dp"
      android:layout_height="40dp"
      android:background="#EFEFEF"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"/>

    <LinearLayout
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="즐겨찾기"
        android:textColor="@color/deep_gray"
        android:textSize="14sp" />

      <Button
        android:id="@+id/btn_bookmark_mypage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_bookmarked_post" />

    </LinearLayout>

    <View
      android:layout_width="1dp"
      android:layout_height="40dp"
      android:background="#EFEFEF"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"/>

    <LinearLayout
      android:layout_weight="1.5"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋아요 게시글"
        android:textColor="@color/deep_gray"
        android:textSize="14sp" />

      <Button
        android:id="@+id/btn_likedpost_mypage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_liked_post" />

    </LinearLayout>

    <View
      android:layout_width="1dp"
      android:layout_height="40dp"
      android:background="#EFEFEF"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"/>

    <LinearLayout
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 설정"
        android:textColor="@color/deep_gray"
        android:textSize="14sp" />

      <Button
        android:id="@+id/btn_profile_setting_mypage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_setting" />

    </LinearLayout>


  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
