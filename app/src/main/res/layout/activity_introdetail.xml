<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#A5A2A2"
  tools:context=".MainActivity">

    <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:padding="20dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">


            <ImageView
              android:id="@+id/iv_tutorial_introDetailActivity"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:layout_marginTop="12dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_sentence_introDetailActivity"
              tools:srcCompat="@tools:sample/avatars" />
            <TextView
              android:id="@+id/tv2_introDetailActivity"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="뭐할래"
              android:textColor="#2FE74D"
              android:textSize="35dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv1_introDetailActivity" />

            <TextView
              android:id="@+id/tv_school_name_introDetailActivity"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"


              android:text="제목 / 소개"
              android:textColor="#747474"
              android:textSize="14dp"
              app:layout_constraintStart_toEndOf="@+id/civ_school_logo_introDetailActivity"
              app:layout_constraintTop_toBottomOf="@+id/tv2_introDetailActivity" />
            <TextView
              android:id="@+id/tv4_introDetailActivity"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="튜토리얼"
              android:textSize="16dp"
              android:textColor="#747474"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/iv_tutorial_introDetailActivity" />
            <TextView
              android:id="@+id/tv5_introDetailActivity"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:textSize="16dp"
              android:text="연관 술게임"
              android:textColor="#747474"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_description_introDetailActivity" />

            <TextView
              android:id="@+id/tv_comments_introDetailActivity"
              android:textStyle="bold"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="댓글"
              android:textSize="16dp"
              android:textColor="#747474"
              app:layout_constraintBottom_toTopOf="@+id/rv_comments_introDetailActivity"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv_related_game_introDetailActivity"
              app:layout_constraintVertical_bias="0.0" />
            <TextView
              android:id="@+id/tv1_introDetailActivity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="21dp"
              android:textStyle="bold"
              android:text="인트로"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/tv_sentence_introDetailActivity"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_marginTop="20dp"
              android:paddingLeft="10dp"
              android:background="@drawable/circle_white"
              android:text="한줄소개"
              android:textSize="14dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.444"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/civ_school_logo_introDetailActivity" />
            <TextView
              android:id="@+id/tv_description_introDetailActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="14dp"
              android:paddingLeft="10dp"
              android:background="@drawable/circle_white"
              android:text="TextView"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv4_introDetailActivity" />

            <TextView
              android:id="@+id/tv_related_game_introDetailActivity"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:paddingLeft="10dp"
              android:textSize="14dp"
              android:background="@drawable/circle_white"
              android:text="TextView"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv5_introDetailActivity" />

            <ImageView
              android:id="@+id/civ_school_logo_introDetailActivity"
              android:layout_width="33dp"
              android:layout_height="24dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv2_introDetailActivity"
              tools:srcCompat="@tools:sample/avatars" />
            <TextView
              android:id="@+id/tv_name_introDetailActivity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14dp"

              android:text="TextView"
              app:layout_constraintStart_toEndOf="@+id/tv_school_name_introDetailActivity"
              app:layout_constraintTop_toBottomOf="@+id/tv2_introDetailActivity" />
            <ImageView
              android:id="@+id/btn_heart_introDetailActivity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:layout_marginTop="4dp"

              android:layout_marginEnd="16dp"
              app:layout_constraintEnd_toStartOf="@+id/btn_share_introDetailActivity"
              app:layout_constraintHorizontal_bias="1.0"
              app:layout_constraintStart_toEndOf="@+id/tv_name_introDetailActivity"
              app:layout_constraintTop_toBottomOf="@+id/tv2_introDetailActivity"
              app:srcCompat="@drawable/ic_star_on" />
            <ImageView
              android:id="@+id/btn_share_introDetailActivity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginEnd="16dp"
              app:layout_constraintEnd_toStartOf="@+id/btn_option_introDetailActivity"
              app:layout_constraintTop_toBottomOf="@+id/tv2_introDetailActivity"
              app:srcCompat="@drawable/ic_share" />
            <ImageView
              android:id="@+id/btn_option_introDetailActivity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:layout_marginEnd="16dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/tv2_introDetailActivity"
              app:srcCompat="@drawable/ic_option" />

            <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/rv_comments_introDetailActivity"
              android:layout_width="match_parent"
              android:layout_height="160dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintHorizontal_bias="1.0"
              app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>