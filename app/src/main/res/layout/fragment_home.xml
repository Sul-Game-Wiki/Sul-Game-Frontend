<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  tools:context=".HomeFragment">

  <Button
    android:id="@+id/btn_popular_home"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/roundedbox"
    android:backgroundTint="@color/primaryGreen"
    android:text="인기 게임 더보기"
    android:textColor="@color/white"
    android:textSize="13sp"
    app:layout_constraintEnd_toStartOf="@+id/btn_creation_home"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ct1_home" />

  <Button
    android:id="@+id/btn_creation_home"
    android:textStyle="bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/roundedbox"
    android:backgroundTint="@color/primaryGreen"
    android:text="인기 게임 더보기"
    android:textColor="@color/white"
    android:textSize="13sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/btn_popular_home"
    app:layout_constraintTop_toBottomOf="@+id/ct2_home" />

  <TextView
    android:id="@+id/tv1_home"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="술겜위키와의 술게임 한판,\n제대로 달리실 준비 되셨나요?"
    android:textColor="#747474"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ct1_home"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/roundedbox"
    app:layout_constraintEnd_toStartOf="@id/ct2_home"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv1_home">

    <ImageButton
      android:id="@+id/btn_popular_detail_home"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="13dp"
      android:layout_marginEnd="3dp"
      android:background="@drawable/ic_detail"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv3_home"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Top"
      android:textAllCaps="true"
      android:textColor="@color/primaryGreen"
      android:textSize="17sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv2_home" />

    <TextView
      android:id="@+id/tv2_home"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="인기"
      android:textColor="@color/black"
      android:textSize="21sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_popular_home"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      app:layout_constraintTop_toBottomOf="@+id/tv3_home"
      tools:listitem="@layout/game_list_item" />


  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ct2_home"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/roundedbox"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ct1_home"
    app:layout_constraintTop_toBottomOf="@+id/tv1_home">

    <ImageButton
      android:id="@+id/btn_create_detail_home"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="13dp"
      android:layout_marginEnd="3dp"
      android:background="@drawable/ic_detail"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv4_home"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="창작"
      android:textColor="@color/black"
      android:textSize="21sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv5_home"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Top"
      android:textAllCaps="true"
      android:textColor="@color/primaryGreen"
      android:textSize="17sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv4_home" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_create_home"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      app:layout_constraintTop_toBottomOf="@+id/tv5_home"
      tools:listitem="@layout/game_list_item" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ct3_home"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="36dp"
    android:background="@drawable/roundedbox"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_popular_home">

    <ImageButton
      android:id="@+id/btn_intro_detail_home"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="13dp"
      android:layout_marginEnd="3dp"
      android:background="@drawable/ic_detail"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv6_home"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="인트로 자랑하기"
      android:textColor="@color/black"
      android:textSize="21sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv7_home"
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:text="Top"
      android:textAllCaps="true"
      android:textColor="@color/primaryGreen"
      android:textSize="17sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv6_home" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_intro_home"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      app:layout_constraintTop_toBottomOf="@+id/tv7_home"
      tools:listitem="@layout/intro_list_item" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>