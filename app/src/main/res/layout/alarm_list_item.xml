<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedbox"
    android:paddingHorizontal="6dp">

    <TextView
        android:id="@+id/tv_alarm_type_alarm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryGreen"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="인기" />

    <TextView
        android:id="@+id/tv_alarm_contents_alarm_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#505050"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_alarm_type_alarm_item"
        tools:text="어제 가장 핫했던 인기 게임이예요 : 바니바니 게임" />

    <TextView
        android:id="@+id/tv_alarm_date_alarm_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#505050"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_alarm_contents_alarm_item"
        tools:text="06/29 00:00" />

</androidx.constraintlayout.widget.ConstraintLayout>