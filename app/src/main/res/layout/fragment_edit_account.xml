<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  tools:context=".ui.mypage.EditAccountFragment">

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/civ_profile_editprofile"
    android:layout_width="149dp"
    android:layout_height="149dp"
    android:layout_marginTop="35dp"
    android:src="#D9D9D9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_editprofile_editprofile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:text="@string/edit_profile_img"
    android:textColor="@color/deep_gray"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/civ_profile_editprofile" />

  <LinearLayout
    android:id="@+id/linear1_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/white_round_border_edittext"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_marginTop="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_editprofile_editprofile">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingStart="5dp"
      android:text="닉네임"
      android:textSize="14sp" />
    <EditText
      android:id="@+id/et1_editprofile"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minWidth="48dp"
      android:minHeight="36dp"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="@color/deep_gray"
      android:layout_marginEnd="6dp"
      android:layout_weight="4"
      android:paddingHorizontal="5dp"
      android:background="@null"
      android:text="구해조" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear2_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/white_round_border_edittext"
    android:layout_marginTop="14dp"
    android:orientation="horizontal"
    android:weightSum="5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/linear1_editprofile">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingStart="5dp"
      android:text="이메일"
      android:textSize="14sp" />
    <EditText
      android:id="@+id/et2_editprofile"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minWidth="48dp"
      android:minHeight="36dp"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="@color/deep_gray"
      android:layout_marginEnd="6dp"
      android:layout_weight="4"
      android:paddingHorizontal="5dp"
      android:background="@null"
      android:text="sejong@gmail.com" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear3_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/white_round_border_edittext"
    android:layout_marginTop="14dp"
    android:orientation="horizontal"
    android:weightSum="5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/linear2_editprofile">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingStart="5dp"
      android:text="생년월일"
      android:textSize="14sp" />
    <EditText
      android:id="@+id/et3_editprofile"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minWidth="48dp"
      android:minHeight="36dp"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="@color/deep_gray"
      android:layout_marginEnd="6dp"
      android:layout_weight="4"
      android:paddingHorizontal="5dp"
      android:maxLength="10"
      android:drawableEnd="@drawable/ic_calendar"
      android:focusable="false"
      android:clickable="true"
      android:background="@null"
      android:text="2000-01-01" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear4_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/white_round_border_edittext"
    android:layout_marginTop="14dp"
    android:orientation="horizontal"
    android:weightSum="5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/linear3_editprofile">

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingStart="5dp"
      android:text="대학교"
      android:textSize="14sp" />
    <EditText
      android:id="@+id/et4_editprofile"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:minWidth="48dp"
      android:minHeight="36dp"
      android:textSize="14sp"
      android:textStyle="bold"
      android:textColor="@color/deep_gray"
      android:completionThreshold="1"
      android:dropDownVerticalOffset="8dp"
      android:drawableEnd="@drawable/ic_arrow_down"
      android:layout_marginEnd="6dp"
      android:layout_weight="4"
      android:paddingHorizontal="5dp"
      android:background="@null"
      android:text="세종대학교" />

  </LinearLayout>

  <Button
    android:id="@+id/btn_sumbit_editprofile"
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_border_20"
    android:backgroundTint="@color/main_color"
    android:layout_marginTop="60dp"
    android:text="등록하기"
    android:textColor="@color/white"
    android:textSize="20sp"
    android:layout_marginHorizontal="28dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/linear4_editprofile"/>

</androidx.constraintlayout.widget.ConstraintLayout>