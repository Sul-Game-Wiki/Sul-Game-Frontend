<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="350dp"
  android:layout_height="100dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:paddingTop="20dp">

  <androidx.cardview.widget.CardView
    android:id="@+id/cv_container_chart_item"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginStart="20dp"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="5dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent" >

    <ImageView
      android:id="@+id/iv_image_chart_item"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:src="@drawable/ic_launcher_background"/>

  </androidx.cardview.widget.CardView>

  <TextView
    android:id="@+id/tv_title_chart_item"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="20dp"
    android:textColor="@color/deep_gray"
    android:textStyle="bold"
    android:textSize="20sp"
    android:maxLines="1"
    android:ellipsize="end"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toEndOf="@+id/cv_container_chart_item"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="바니바니"/>

  <TextView
    android:id="@+id/tv_contents_chart_item"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:textSize="15sp"
    android:textColor="@color/dark_gray"
    android:ellipsize="end"
    android:maxLines="1"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintEnd_toStartOf="@+id/tv_heart_chart_item"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/cv_container_chart_item"
    tools:text="하늘에서 내려와버린 토끼"/>

  <TextView
    android:id="@+id/tv_heart_chart_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="20dp"
    android:drawablePadding="5dp"
    app:drawableStartCompat="@drawable/ic_heart"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:text="30"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#F2F0F0"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>