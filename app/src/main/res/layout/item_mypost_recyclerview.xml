<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/tv_title_mypost_item"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="글 제목"
    android:textColor="@color/deep_gray"
    android:textSize="20sp"
    android:layout_marginTop="19dp"
    android:layout_marginStart="14dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_sentence_mypost_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="10dp"
    android:text="한줄 요약"
    android:textColor="@color/deep_gray"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@+id/tv_title_mypost_item"
    app:layout_constraintTop_toBottomOf="@+id/tv_title_mypost_item" />

  <TextView
    android:id="@+id/tv_edit_mypost_item"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="수정"
    android:textColor="@color/deep_gray"
    android:textSize="15sp"
    android:layout_marginEnd="14dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tv_sentence_mypost_item" />


</androidx.constraintlayout.widget.ConstraintLayout>