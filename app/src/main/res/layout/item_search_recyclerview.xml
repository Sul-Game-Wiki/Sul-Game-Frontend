<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingVertical="10dp"
  android:paddingHorizontal="20dp">

  <TextView
    android:id="@+id/tv_title_mypage_post_item"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="글 제목"
    android:textColor="#424242"
    android:textSize="20sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_introduction_mypage_post_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:text="한줄 요약"
    android:textColor="#505050"
    android:textSize="15sp"
    app:layout_constraintStart_toStartOf="@+id/tv_title_mypage_post_item"
    app:layout_constraintTop_toBottomOf="@+id/tv_title_mypage_post_item" />

  <ImageView
    android:id="@+id/iv_thumbnail_mypage_post_item"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:src="@color/light_gray"
    android:background="@drawable/rounded_imageview"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/iv_heart_mypage_post_item"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:src="@drawable/ic_heart"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/tv_likes_mypage_post_item" />

  <TextView
    android:id="@+id/tv_likes_mypage_post_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="100"
    android:textStyle="bold"
    android:textColor="@color/main_color"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/iv_heart_mypage_post_item" />

  <ImageView
    android:id="@+id/iv_comment_mypage_post_item"
    android:layout_width="16dp"
    android:layout_height="16dp"
    android:src="@drawable/ic_comment"
    android:layout_marginStart="9dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tv_likes_mypage_post_item"
    app:layout_constraintTop_toTopOf="@+id/tv_comments_mypage_post_item" />

  <TextView
    android:id="@+id/tv_comments_mypage_post_item"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="100"
    android:textColor="@color/main_color"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/iv_comment_mypage_post_item" />

  <TextView
    android:id="@+id/tv_time_mypage_post_item"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:text="00:00"
    android:textColor="@color/deep_gray"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tv_comments_mypage_post_item" />

  <TextView
    android:id="@+id/tv_nickname_mypage_post_item"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="9dp"
    android:text="구해조"
    android:textColor="@color/deep_gray"
    android:textSize="15sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tv_time_mypage_post_item" />

</androidx.constraintlayout.widget.ConstraintLayout>