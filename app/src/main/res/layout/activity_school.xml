<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingHorizontal="20dp"
  tools:context=".SchoolActivity">

  <ImageButton
    android:id="@+id/btn_close_school"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@null"
    android:src="@drawable/ic_close"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_prompt1_school"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/galmuri11_bold"
    android:text="본인의 대학교를 입력해주세요"
    android:textColor="@color/black"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.2" />

  <TextView
    android:id="@+id/tv_prompt2_school"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="46dp"
    android:text="대학교"
    android:textColor="@color/deep_gray"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_prompt1_school" />

  <AutoCompleteTextView
    android:id="@+id/tv_school_school"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/roundedbox_line_20"
    android:paddingHorizontal="15dp"
    android:completionThreshold="1"
    android:dropDownVerticalOffset="8dp"
    android:drawableEnd="@drawable/ic_arrow_down"
    android:paddingVertical="12dp"
    android:textColor="@color/deep_gray"
    android:textSize="14sp"
    android:hint="대학교 검색"
    app:layout_constraintTop_toBottomOf="@+id/tv_prompt2_school" />

  <Button
    android:id="@+id/btn_next_school"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="52dp"
    android:layout_marginHorizontal="28dp"
    android:background="@drawable/roundedbox_20"
    android:backgroundTint="@color/light_gray"
    android:text="다음"
    android:enabled="false"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>