<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="0dp"
  android:background="@color/white"
  app:layout_constraintBottom_toBottomOf="parent"
  app:layout_constraintEnd_toEndOf="parent"
  app:layout_constraintStart_toStartOf="parent"
  app:layout_constraintTop_toBottomOf="@+id/container_title_mypage">

  <LinearLayout
    android:id="@+id/container_button_mypage"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingHorizontal="28dp"
    app:layout_constraintBottom_toTopOf="@id/container_footer_mypage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_university_mypage">

    <Button
      android:id="@+id/btn_mypost_mypage"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/white_round_border_20"
      android:backgroundTint="@color/main_color"
      android:paddingVertical="9dp"
      android:text="내 게시글"
      android:textColor="@color/white"
      android:textSize="20sp" />

    <Button
      android:id="@+id/btn_favorpost_mypage"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="11dp"
      android:background="@drawable/white_round_border_20"
      android:backgroundTint="@color/main_color"
      android:paddingVertical="9dp"
      android:text="즐겨찾기 게시글"
      android:textColor="@color/white"
      android:textSize="20sp" />

    <Button
      android:id="@+id/btn_editprofile_mypage"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="11dp"
      android:background="@drawable/white_round_border_20"
      android:backgroundTint="@color/main_color"
      android:paddingVertical="9dp"
      android:text="프로필 편집"
      android:textColor="@color/white"
      android:textSize="20sp" />


  </LinearLayout>

  <LinearLayout
    android:id="@+id/container_footer_mypage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="5dp"
      android:text="회월탈퇴 / 로그아웃"
      android:textColor="@color/deep_gray"
      android:textSize="14sp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="5dp"
      android:text="개인정보처리방침"
      android:textColor="@color/deep_gray"
      android:textSize="14sp" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="5dp"
      android:text="이용약관"
      android:textColor="@color/deep_gray"
      android:textSize="14sp" />
  </LinearLayout>

  <TextView
    android:id="@+id/tv_username_mypage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:fontFamily="@font/galmuri11bold"
    android:text="유저명"
    android:textColor="@color/deep_gray"
    android:textSize="36sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/civ_profile_mypage" />

  <TextView
    android:id="@+id/tv_university_mypage"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="세종대학교"
    android:textColor="@color/deep_gray"
    android:textSize="15sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_username_mypage" />

  <de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/civ_profile_mypage"
    android:layout_width="149dp"
    android:layout_height="149dp"
    android:layout_marginTop="35dp"
    android:src="#D9D9D9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>