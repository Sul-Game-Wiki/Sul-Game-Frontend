<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  tools:context=".EditProfileActivity">

  <Button
    android:textStyle="bold"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="40dp"
    android:backgroundTint="#2FE74D"
    android:text="변경내용 저장"
    android:textColor="#fff"
    android:textSize="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linear4_editprofile" />

  <LinearLayout
    android:id="@+id/linear2_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/roundedbox"
    android:orientation="horizontal"
    android:weightSum="7"
    app:layout_constraintTop_toBottomOf="@id/linear1_editprofile">


    <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="6"
      android:text="xxxx@gmail.com" />

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="이메일"
      android:textSize="16dp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear3_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/roundedbox"
    android:orientation="horizontal"
    android:weightSum="7"
    app:layout_constraintTop_toBottomOf="@id/linear2_editprofile">


    <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="6"
      android:text="xxxx.xx.xx" />

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="생년월일"
      android:textSize="16dp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear4_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/roundedbox"
    android:orientation="horizontal"
    android:weightSum="7"
    app:layout_constraintTop_toBottomOf="@id/linear3_editprofile">


    <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="6"
      android:text="세종대학교" />

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="대학교"
      android:textSize="16dp" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/linear1_editprofile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginHorizontal="10dp"
    android:padding="5dp"
    android:background="@drawable/roundedbox"
    android:orientation="horizontal"
    android:weightSum="7"
    app:layout_constraintTop_toBottomOf="@id/tv_editprofile">


    <EditText
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="6"
      android:text="구해조" />

    <TextView
      android:textStyle="bold"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="닉네임"
      android:textSize="16dp" />

  </LinearLayout>

  <TextView
    android:id="@+id/tv_editprofile"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="회원정보수정"
    android:textColor="#000"
    android:textSize="24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>