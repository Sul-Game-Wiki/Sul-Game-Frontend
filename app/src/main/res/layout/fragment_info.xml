<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".InfoFragment">

    <LinearLayout
      android:id="@+id/linear_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:background="@drawable/roundedbox"
      android:layout_marginTop="20dp"
      android:padding="10dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/iv_info"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:src="@drawable/img_student"
          app:layout_constraintStart_toStartOf="parent" />

        <TextView
          android:id="@+id/tv_info_univ"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="소속 기관"
          android:layout_marginHorizontal="10dp"
          android:textColor="#000"
          android:textSize="20dp"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/tv_info_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="유저 이름님"
          android:textSize="20dp"
          android:textColor="#000" />

    </LinearLayout>

    <Button
      android:id="@+id/btn1_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/linear_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="30dp"
      android:textColor="#fff"
      android:text="내 게시글"
      android:textSize="20dp"
      android:textStyle="bold"
      android:background="@drawable/roundedbox"
      android:backgroundTint="#2FE74D"/>

    <Button
      android:id="@+id/btn2_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/btn1_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginVertical="15dp"
      android:textColor="#fff"
      android:text="즐겨찾기 게시글"
      android:textSize="20dp"
      android:textStyle="bold"
      android:background="@drawable/roundedbox"
      android:backgroundTint="#2FE74D"/>

    <Button
      android:id="@+id/btn3_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/btn2_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginVertical="15dp"
      android:textColor="#fff"
      android:text="회원정보 수정"
      android:textSize="20dp"
      android:textStyle="bold"
      android:background="@drawable/roundedbox"
      android:backgroundTint="#2FE74D"/>

    <Button
      android:id="@+id/btn4_info"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@+id/btn3_info"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginVertical="15dp"
      android:textColor="#fff"
      android:text="프로필 이미지 수정"
      android:textSize="20dp"
      android:textStyle="bold"
      android:background="@drawable/roundedbox"
      android:backgroundTint="#2FE74D"/>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:gravity="center_horizontal">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginVertical="5dp"
          android:text="회월탈퇴 / 로그아웃"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginVertical="5dp"
          android:text="개인정보처리방침"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginVertical="5dp"
          android:text="이용약관"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

