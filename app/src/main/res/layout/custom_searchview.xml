<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/white_round_border_search">

  <ImageButton
    android:id="@+id/btn_previous_searchview"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/ic_previous"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <EditText
    android:id="@+id/et_search_searchview"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="8dp"
    android:background="@null"
    android:imeOptions="actionSearch"
    android:inputType="text"
    android:maxLines="1"
    android:textSize="14sp"
    android:textColor="@android:color/black"
    android:textColorHint="@android:color/darker_gray"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/btn_search_searchview"
    app:layout_constraintStart_toEndOf="@id/btn_previous_searchview"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
    android:id="@+id/btn_search_searchview"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginVertical="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/ic_search"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
