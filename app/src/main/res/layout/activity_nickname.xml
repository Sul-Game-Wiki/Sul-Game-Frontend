<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingHorizontal="20dp"
  tools:context=".NicknameActivity">

  <ImageButton
    android:id="@+id/btn_close_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@null"
    android:src="@drawable/ic_close"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_prompt1_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fontFamily="@font/galmuri11_bold"
    android:text="닉네임을 입력해주세요"
    android:textColor="@color/black"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.2" />

  <TextView
    android:id="@+id/tv_prompt2_nickname"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="46dp"
    android:text="닉네임"
    android:textColor="@color/deep_gray"
    android:textSize="16sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_prompt1_nickname" />

  <EditText
    android:id="@+id/et_name_nickname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/roundedbox_line_20"
    android:paddingHorizontal="15dp"
    android:maxLength="10"
    android:paddingVertical="12dp"
    android:textColor="@color/deep_gray"
    android:textSize="14sp"
    app:layout_constraintTop_toBottomOf="@+id/tv_prompt2_nickname"
    tools:text="구해조" />

  <TextView
    android:id="@+id/tv_hint1_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:text="모든 문자, 숫자, 이모지를 사용할 수 있어요"
    android:textColor="@color/deep_gray"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_name_nickname" />

  <TextView
    android:id="@+id/tv_hint2_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:text="사용 가능한 닉네임입니다."
    android:textColor="@color/main_color"
    android:visibility="invisible"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_name_nickname" />

  <TextView
    android:id="@+id/tv_hint3_nickname"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:text="사용중인 닉네임입니다."
    android:textColor="@color/red"
    android:visibility="invisible"
    android:textSize="12sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_name_nickname" />

  <TextView
    android:id="@+id/tv_count_length_nickname"
    android:textStyle="bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:textColor="@color/deep_gray"
    android:text="0/10"
    android:textSize="12sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_name_nickname" />

  <Button
    android:id="@+id/btn_next_nickname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="52dp"
    android:layout_marginHorizontal="28dp"
    android:background="@drawable/roundedbox_20"
    android:backgroundTint="@color/light_gray"
    android:text="다음"
    android:enabled="false"
    android:textColor="@color/white"
    android:textSize="20sp"
    app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>