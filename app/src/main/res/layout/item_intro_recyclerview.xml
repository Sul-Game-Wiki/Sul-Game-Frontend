<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="100dp"
  android:paddingTop="20dp"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
      android:id="@+id/tv_title_intro_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:textSize="20sp"
      android:textColor="@color/deep_gray"
      android:textStyle="bold"
      android:maxLines="1"
      android:maxEms="15"
      android:ellipsize="end"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      tools:text="어목조동"/>

    <TextView
      android:id="@+id/tv_contents_intro_item"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/dark_gray"
      android:layout_marginStart="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:maxLines="1"
      android:ellipsize="end"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/tv_username_intro_item"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="자연과 함께하는 술게임"/>

    <TextView
      android:id="@+id/tv_username_intro_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:textSize="15sp"
      android:textColor="@color/deep_gray"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/tv_heart_intro_item"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="구해조" />

    <TextView
      android:id="@+id/tv_heart_intro_item"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:textColor="@color/main_color"
      android:textStyle="bold"
      android:textSize="15sp"
      android:drawablePadding="5dp"
      app:drawableStartCompat="@drawable/ic_heart"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      tools:text="30"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="#F2F0F0"
    app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>