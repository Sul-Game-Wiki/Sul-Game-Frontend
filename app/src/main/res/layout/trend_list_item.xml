<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_trend_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:maxLength="15"
        android:minWidth="80dp"
        android:textColor="#505050"
        android:textSize="10sp"
        android:maxLines="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1. 바니바니" />

    <TextView
        android:id="@+id/tv_content_trend_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:textColor="#505050"
        android:textSize="10sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_heart_trend_item"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/tv_title_trend_item"
        tools:text="하늘에서 내려온 토끼가 하는 말~" />

    <TextView
        android:id="@+id/tv_heart_trend_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/primaryGreen"
        android:drawablePadding="3dp"
        android:textSize="10sp"
        app:drawableStartCompat="@drawable/ic_heart_on"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10" />


</androidx.constraintlayout.widget.ConstraintLayout>