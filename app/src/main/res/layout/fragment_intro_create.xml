<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/create_create_xml">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="인트로 분류"/>
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="작성을 원하시는 인트로를 선택해주세요!"/>


    <RadioGroup
      android:layout_width="match_parent"
      android:layout_height="match_parent" >
      <RadioButton
        android:id="@+id/rb_real_intro_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="술 게임 시작 전에 하는 진짜 인트로" />
      <RadioButton
        android:id="@+id/rb_fun_intro_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="술 게임 사이사이에 하는 재미용 인트로" />
    </RadioGroup>
    <TextView
      android:id="@+id/tv1_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="제목/소개"/>

    <EditText
      android:id="@+id/et_title_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <EditText
      android:id="@+id/et_sentence_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>



    <TextView
      android:id="@+id/tv3_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="튜토리얼"/>
    <EditText
      android:id="@+id/et_description_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tv4_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="튜토리얼 첨부파일"/>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:orientation="horizontal">
      <ImageButton
        android:id="@+id/btn_camera_create"
        android:clickable="true"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:enabled="true"
        android:focusable="true"
        android:src="@drawable/btn_camera"/>
      <ImageButton
        android:id="@+id/btn_gallery_create"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/btn_gallery"/>
      <ImageButton
        android:id="@+id/btn_intro_file_create"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/btn_audio"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:visibility="gone"
      android:id="@+id/rv_media_create"/>
    <Button
      android:text="썸네일 아이콘 선택"
      android:id="@+id/btn_icon_create"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>
    <TextView
      android:id="@+id/tv5_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="태그"/>
    <com.google.android.material.chip.ChipGroup
      android:id="@+id/chipGroup_etc_create"
      android:theme="@style/Theme.MaterialComponents.DayNight"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      app:singleSelection="false">

      <com.google.android.material.chip.Chip
        android:id="@+id/chip_love_official"
        style="@style/CustomChipChoice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.1"/>

      <com.google.android.material.chip.Chip
        android:id="@+id/chip_tension_official"
        style="@style/CustomChipChoice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.2"/>
      <com.google.android.material.chip.Chip
        android:id="@+id/chip_move_official"
        style="@style/CustomChipChoice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.3"/>
      <com.google.android.material.chip.Chip
        android:id="@+id/chip_brain_official"
        style="@style/CustomChipChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.1"/>

      <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomChipChoice"
        android:text="Tag 4.2"/>
      <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomChipChoice"
        android:text="Tag 4.3"/>
      <com.google.android.material.chip.Chip
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomChipChoice"
        android:text="Tag 4.3"/>
      <com.google.android.material.chip.Chip
        style="@style/CustomChipChoice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.1"/>

      <com.google.android.material.chip.Chip

        style="@style/CustomChipChoice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.2"/>
      <com.google.android.material.chip.Chip

        style="@style/CustomChipChoice"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.3"/>
      <com.google.android.material.chip.Chip

        style="@style/CustomChipChoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag 4.1"/>

      <com.google.android.material.chip.Chip

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomChipChoice"
        android:text="Tag 4.2"/>
      <com.google.android.material.chip.Chip

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomChipChoice"
        android:text="Tag 4.3"/>
      <com.google.android.material.chip.Chip

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomChipChoice"
        android:text="Tag 4.3"/>
    </com.google.android.material.chip.ChipGroup>

    <TextView
      android:id="@+id/tv9_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="내 정보 공개 여부"/>

    <RadioGroup
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingHorizontal="10dp"
      android:orientation="horizontal">
      <RadioButton
        android:id="@+id/btn_open_create"
        android:text="공개"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      <RadioButton
        android:text="비공개"
        android:id="@+id/btn_private_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RadioGroup>
    <TextView
      android:id="@+id/tv10_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="연관술게임"/>
    <EditText
      android:id="@+id/et_search_create"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>
    <ImageButton
      android:id="@+id/btn_search_create"
      android:src="@drawable/ic_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id ="@+id/rv_create_game_list_create"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <Button
      android:text="등록하기"
      android:id="@+id/btn_enroll_create"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>



  </LinearLayout>


</ScrollView>