    <activity
      android:exported="false"
      android:name=".official.OfficialCreate" />


    <activity
      android:exported="false"
      android:name=".StartActivity" />
    <activity
      android:exported="false"
      android:name=".detail.OfficialDetail" />
    <activity
      android:exported="false"
      android:name=".detail.CreateDetail" />
    <activity
      android:exported="false"
      android:name=".MainActivity" />
  </application>
</manifest>
